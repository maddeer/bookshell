{% include "header.tmpl" %}

<div class="container">
<h1>{{ book['book_data'].book_name }}
{% if owner %}
<a type="button" class="btn btn-secondary" href='/addchapter/{{ book['book_data'].id }}'>Добавить главу</a>
{% endif %}
</h1>
	<div class="media">
	  <img class="d-flex mr-3 glyph-icon" src="/static/img/si-glyph-book-3.svg" alt="book image">
	  <div class="media-body">
	 {% for author in book['book_authors'] %}
		<h6><a href='/profile/{{ author.id }}'>{{ author.full_name }}</a></h6>
	 {% endfor %}
			{{ book['book_data'].book_description }}
		<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
		  <div class="btn-group mr-2" role="group" aria-label="First group">
			<a type="button" class="btn btn-secondary" href='/exportbook/{{ book['book_data'].id }}'>pdf</a>
			<a type="button" class="btn btn-secondary" href='/exportbook/{{ book['book_data'].id }}?format=fb2'>fb2</a>
			<a type="button" class="btn btn-secondary" href='/exportbook/{{ book['book_data'].id }}?format=fb2'>ebub</a>
			<a type="button" class="btn btn-secondary" href='/exportbook/{{ book['book_data'].id }}?format=fb2'>mobi</a>
		  </div>
		</div>
	  </div>
	  <!--
	  <img class="d-flex mr-3 glyph-icon" src="/static/img/si-glyph-document-pdf.svg" alt="book image">
	  -->
	</div>
</div>
<div class="container">
{% for item in book['book_chapters'] %}
	{% if not item[0].deleted or item[0].deleted < 1 or owner %}
	<div class="media">
	  <img class="d-flex mr-3 glyph-icon" src="/static/img/si-glyph-book-3.svg" alt="book image">
	  <div class="media-body">
		<h4 class="mt-0">
			<a  href='/chapter/{{ item[0].id }}'>
			 <span class="badge badge-light">Глава:</span> {{ item[0].chapter_title }}
			</a>
		</h4>
		<a href='/chapter/{{ item[0].id }}'>{{ item[0].short_text }}</a>
		<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
		  <div class="btn-group mr-2" role="group" aria-label="First group">
			<a type="button" class="btn btn-secondary" href='/exportchapter/{{ item[0].id }}'>pdf</a>
			<a type="button" class="btn btn-secondary" href='/exportchapter/{{ item[0].id }}?format=fb2'>fb2</a>
			<a type="button" class="btn btn-secondary" href='/exportchapter/{{ item[0].id }}?format=fb2'>ebub</a>
			<a type="button" class="btn btn-secondary" href='/exportchapter/{{ item[0].id }}?format=fb2'>mobi</a>
		  </div>
		</div>
	  </div>
	</div>
	{% endif %}
{% endfor %}
</div>
{% include "footer.tmpl" %}
